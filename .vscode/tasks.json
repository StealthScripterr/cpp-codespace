{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile & Run Current C++ with Local I/O",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++ '${file}' -o '${fileDirname}/run' && '${fileDirname}/run' < '${fileDirname}/input.txt' > '${fileDirname}/output.txt' && rm '${fileDirname}/run'"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "echo": true,
        "panel": "shared"
      }
    }
  ]
}
